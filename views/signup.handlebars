<div class="col-6 offset-3 signup-page">
    <div class="row">
        <div class="col text-center">
            <h1 class="header-text">U DO</h1>
        </div>
    </div>
    <div class="row">
        <div class="col p-4">
            <div class="row my-3">
                <div class="col text-start">
                    <h3 class="header-text">Sign Up Here!</h3>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <input type="text" class="form-control" id="signupUsername" placeholder="Username">
                    </div>
                    <div class="form-group mt-3">
                        <input type="email" class="form-control" id="signupEmail" placeholder="Email Address">
                    </div>
                    <div class="form-group mt-3">
                        <input type="password" class="form-control" id="signupPassword" placeholder="Password">
                    </div>
                    <div class="form-group row mt-5">
                        <button type="button" id="doSignup" class="btn btn-primary w-100">Sign Up</button>
                    </div>
                    <div class="row header-text mt-4 text-center">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">Already have an account? <a href="/login">Login here</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/signup.js"></script>
