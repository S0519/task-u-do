<li class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto w-100">
        <div class="row">
            <div class="col-8">
                <h4 class="list-title position-relative">{{title}}</h4>
            </div>
            <div class="col-4 text-end">
                <div class="row">
                    <div class="col">
                        <span title="edit" data-id="{{id}}" data-title="{{title}}"
                              class="badge bg-warning text-dark edit-list"><i class="fas fa-edit fa-lg"></i></span>
                        <span title="delete" data-id="{{id}}" class="badge bg-danger delete-list"><i
                                class="fas fa-trash-alt fa-lg"></i></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-8">
                {{#ifvalue status value=0}}
                    <button type="button" class="btn btn-success task-complete" data-id="{{id}}">Complete</button>
                {{/ifvalue}}
            </div>
            <div class="col-4 text-end">
                <span class="list-progress ms-2 badge bg-primary">Status: </span><span class="list-progress ms-2 badge bg-secondary">{{status_name}}</span>
            </div>
        </div>
    </div>
</li>
