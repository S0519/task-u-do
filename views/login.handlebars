    <div class="row">
        <div class="col text-center">
            <h1 class="header-text">U DO</h1>
        </div>
    </div>
    <div class="row">
        <div class="col p-4">
            <div class="row my-3">
                <div class="col text-start">
                    <h3 class="ms-3 header-text">Login Here!</h3>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <input type="email" class="form-control" id="loginEmail" placeholder="Email">
                    </div>
                    <div class="form-group mt-3">
                        <input type="password" class="form-control" id="loginPassword" placeholder="Password">
                    </div>
                    <div class="form-group mt-3">
                        <button type="button" id="doLogin" class="btn btn-primary w-100">Sign In Now</button>
                    </div>
                    <div class="row header-text mt-4 text-center">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">Don't have an account? <a href="/signup">Sign up here!</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
