<div class="col-6 offset-3">
    <input type="hidden" id="list-id" value="{{list_id}}">
    {{> header }}
    <div class="row my-3">
        <div class="col">
            <div class="row">
                <div class="col">
                    <h3>{{list_name}}</h3>
                </div>
                <div class="col text-end">
                    <button type="button" class="btn btn-info" id="new-list-button"><i class="fas fa-plus-square"></i> New Task</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <ul class="list-group">
                {{#if tasks.length}}
                    {{#each tasks as |task|}}
                        {{> single-task task }}
                    {{/each}}
                {{else}}
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">No Current Tasks</div>
                            <span id="new-list-text">Click here to add a new Task</span>
                        </div>
                    </li>
                {{/if}}
            </ul>
        </div>
    </div>
</div>
<div class="modal" tabindex="-1" id="new-list-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="new-list-title">New Task</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="new-list-content">
                <label for="new-list" class="form-label">Task Name:</label>
                <input type="text" class="form-control" id="new-list-input" placeholder="Pickles, Walk Dog...">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="button-create">Create Task</button>
            </div>
        </div>
    </div>
</div>
<script src="/js/list.js"></script>
